<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:clickable="true"
    >
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/ColorPrimary">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:src="@drawable/left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:maxLines="1"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:drawablePadding="5dp"
            android:text="Choose Location"
            android:textColor="@color/color_white"
            android:textSize="@dimen/text_size_large" />


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/colordarkGray"
        >

        <EditText
            android:id="@+id/choose_location_edit"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@color/color_white"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="35dp"
            android:hint="Choose your Location"
            android:paddingTop="5dp"
            android:singleLine="true" />

        <ImageButton
            android:id="@+id/location_fragment_clear_imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/close_icon" />

    </RelativeLayout>

    <TextView
        android:id="@+id/use_my_location_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Use my location"
        android:textSize="17sp"
        android:padding="10dp"
        android:textColor="@color/color_blue"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGray"
        />
    <ListView
        android:id="@+id/choose_location_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="1dp"
        android:divider="@color/colorGray"></ListView>


</LinearLayout>
