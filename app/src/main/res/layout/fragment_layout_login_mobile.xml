<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary"
        android:visibility="gone">

        <Button
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:contentDescription=""
            android:drawableLeft="@drawable/left"
            android:paddingLeft="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="Mobile Verification"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />


    </RelativeLayout>


    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/close_icon"
        android:background="@android:color/transparent"
        android:padding="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"/>


    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backBtn"
        android:src="@drawable/phone"
        android:scaleType="fitCenter"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/textLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Phone Number"
        android:textSize="@dimen/text_size_large"
        android:layout_centerHorizontal="true"
        android:textColor="@color/ColorPrimary"
        android:layout_below="@+id/logo"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"/>


    <TextView
        android:id="@+id/textLbl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLbl"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:gravity="center"
        android:text="We will send automated message to your number. We will never share your number with anyone."
        android:textSize="@dimen/text_size" />

    <!--<TextView-->
    <!--android:id="@+id/textView"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_below="@+id/textLbl2"-->
    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:gravity="center"-->
    <!--android:text="We need your mobile number to keep you updated on your order and delivery status"-->
    <!--android:textAppearance="?android:attr/textAppearanceSmall" />-->


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textLbl2">

        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="10 digit phone number"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:textColor="@android:color/black"
            android:textColorHint="@color/colorGray"
            android:textSize="@dimen/text_size_normal" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btnNext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_layout_phone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_button_resend"
        android:contentDescription=""
        android:minHeight="10dp"
        android:padding="10dp"
        android:text="NEXT"
        android:textColor="@color/app_text_color"
        android:textSize="@dimen/text_size_normal"
        android:visibility="visible" />

</RelativeLayout>