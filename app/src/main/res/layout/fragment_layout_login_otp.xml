        <!--android:background="@android:color/transparent"-->
        <!--android:contentDescription=""-->
        <!--android:paddingLeft="10dp"-->
        <!--android:text="Done"-->
        <!--android:textColor="@color/color_white"-->
        <!--android:textSize="19dp"-->
        <!--android:visibility="visible" />-->


    </RelativeLayout>

    <TextView
        android:id="@+id/textLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Please enter your One Time Password. We have sent the same to your number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="18sp" />


    <EditText
        android:id="@+id/edtOTp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textLbl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:gravity="center"
        android:hint="OTP"
        android:imeOptions="actionDone"
        android:inputType="phone"
        android:textColor="@android:color/black" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtOTp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/resend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_resend_button"
            android:ems="6"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/text_resend"
            android:textColor="@color/color_white"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btnDone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/resend"
            android:background="@drawable/shape_button_resend"
            android:contentDescription=""
            android:ems="6"
            android:text="Done"
            android:textColor="@color/color_white"
            android:textSize="18dp"
            android:visibility="visible" />


    </RelativeLayout>

