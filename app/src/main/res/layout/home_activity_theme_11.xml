<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/theme_11_home_bg">

        <RelativeLayout
            android:id="@+id/layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_margin">

            <RelativeLayout
                android:id="@+id/relCategory"
                android:layout_width="@dimen/bg_size"
                android:layout_height="@dimen/bg_size"
                android:background="@drawable/theme_11_home_menu_bg">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/imgCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/home_icon_size" />

                    <TextView
                        android:id="@+id/category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgCategory"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="CATEGORIES"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/home_11_text_size" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relBookNow"
                android:layout_width="@dimen/bg_size"
                android:layout_height="@dimen/bg_size"
                android:layout_below="@+id/relCategory"
                android:background="@drawable/theme_11_home_menu_bg">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/imgBookNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/home_icon_size" />

                    <TextView
                        android:id="@+id/bookNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgBookNow"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="BOOK NOW"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/home_11_text_size" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relContact"
                android:layout_width="@dimen/bg_size"
                android:layout_height="@dimen/bg_size"
                android:layout_below="@+id/relBookNow"
                android:background="@drawable/theme_11_home_menu_bg">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">


                    <TextView
                        android:id="@+id/imgContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/home_icon_size" />

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgContact"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="CONTACT US"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/home_11_text_size" />

                </RelativeLayout>


            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/left_margin">


            <RelativeLayout
                android:id="@+id/relOffers"
                android:layout_width="@dimen/bg_size"
                android:layout_height="@dimen/bg_size"
                android:background="@drawable/theme_11_home_menu_bg">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <TextView
                        android:id="@+id/imgOffers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/home_icon_size" />

                    <TextView
                        android:id="@+id/offers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgOffers"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="OFFERS"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/home_11_text_size" />
                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relMyOrders"
                android:layout_width="@dimen/bg_size"
                android:layout_height="@dimen/bg_size"
                android:layout_below="@+id/relOffers"
                android:background="@drawable/theme_11_home_menu_bg">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:id="@+id/imgMyOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/home_icon_size" />

                    <TextView
                        android:id="@+id/myOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgMyOrder"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:text="DELIVERY AREA"
                        android:textColor="@color/ColorPrimary"
                        android:textSize="@dimen/home_11_text_size" />

                </RelativeLayout>

            </RelativeLayout>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout2"
            android:background="@drawable/theme_11_home_logo"></RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
