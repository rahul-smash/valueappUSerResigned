<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/theme_16_home_bg">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/theme_16_home_top_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:text="All Time Favourite Pizza's"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dimen_big_text_size" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relCategory"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menubg_height">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/font_home_cat"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imgCategory"
                    android:text="CATEGORIES"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/home_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relOffers"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menubg_height">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/font_home_offer"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imgOffers"
                    android:text="OFFERS"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/home_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relMyCart"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menubg_height">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/font_home_my_cart"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imgCart"
                    android:text="MY CART"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/home_text_size" />


                <Button
                    android:id="@+id/buttonCart"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignRight="@+id/imgCart"
                    android:layout_alignTop="@+id/imgCart"
                    android:background="@drawable/red_noto"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relBookNow"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menubg_height">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgBookNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/font_home_book"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imgBookNow"
                    android:text="BOOK NOW"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/home_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relMyOrders"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menubg_height">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgOrderHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/font_home_order"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imgOrderHistory"
                    android:text="DELIVERY AREA"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/home_text_size" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relContact"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/menubg_height">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/font_home_contact"
                    android:textColor="@color/ColorPrimary"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/imgContact"
                    android:text="CONTACT"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/home_text_size" />
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>