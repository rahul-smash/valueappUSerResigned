<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:background="@drawable/theme_18_home_bg">


    <!-- <ImageView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:adjustViewBounds="true"
     android:scaleType="fitXY"
     android:src="@drawable/theme_18_home_bg" />-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_theme_18_home_menu_bg_2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relCategory"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="33"
                >

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/font_home_cat"
                    android:textColor="@color/menu_bg_color"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgCategory"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@color/ColorPrimary"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="CATEGORIES"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/home_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ColorPrimary"></View>

            <RelativeLayout
                android:id="@+id/relOffers"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="33">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgOffers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/font_home_offer"
                    android:textColor="@color/menu_bg_color"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgOffers"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@color/ColorPrimary"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="OFFERS"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/home_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ColorPrimary"></View>

            <RelativeLayout
                android:id="@+id/relMyCart"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="33">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgCart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/font_home_my_cart"
                    android:textColor="@color/menu_bg_color"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgCart"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@color/ColorPrimary"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="MY CART"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/home_text_size" />


                <Button
                    android:id="@+id/buttonCart"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignRight="@+id/imgCart"
                    android:layout_alignTop="@+id/imgCart"
                    android:background="@drawable/red_noto"
                    android:clickable="false"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/relBookNow"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="33">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgBookNow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/font_home_book"
                    android:textColor="@color/menu_bg_color"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgBookNow"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@color/ColorPrimary"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="BOOK NOW"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/home_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ColorPrimary"></View>

            <RelativeLayout
                android:id="@+id/relMyOrders"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="33">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgOrderHistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/font_home_order"
                    android:textColor="@color/menu_bg_color"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgOrderHistory"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@color/ColorPrimary"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="DELIVERY AREA"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/home_text_size" />
            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/ColorPrimary"></View>

            <RelativeLayout
                android:id="@+id/relContact"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_weight="33">

                <com.signity.bonbon.view.FontTextView
                    android:id="@+id/imgContact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/font_home_contact"
                    android:textColor="@color/menu_bg_color"
                    android:textSize="30sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imgContact"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:background="@color/ColorPrimary"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="CONTACT"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/home_text_size" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>