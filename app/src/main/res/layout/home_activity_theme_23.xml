<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_bg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/theme_23_home_bg" />

    <RelativeLayout
        android:id="@+id/bottomLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/theme_23_home_down_part">

    </RelativeLayout>


    <ImageButton
        android:id="@+id/cartBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/bottomLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:background="@drawable/theme_23_home_cart" />

    <Button
        android:id="@+id/buttonCart"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_alignBottom="@+id/cartBtn"
        android:layout_marginBottom="3dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/red_noto"
        android:clickable="false"
        android:gravity="center"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="10sp"
        android:visibility="visible" />

    <RelativeLayout
        android:id="@+id/relHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="@color/color_ligh_black"
        android:layout_toLeftOf="@+id/centerLine"
        android:layout_above="@+id/bottomLine"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="28dp"
        android:paddingRight="29dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imgOrderHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@drawable/theme_23_home_history" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgOrderHistory"
            android:layout_centerHorizontal="true"
            android:text="History"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomLine"
        android:layout_marginBottom="5dp"
        android:background="@color/color_ligh_black"
        android:layout_toRightOf="@+id/centerLine"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@drawable/theme_23_home_contact" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgContact"
            android:layout_centerHorizontal="true"
            android:text="Contact"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/relCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/centerLine2"
        android:layout_toLeftOf="@+id/centerLine"
        android:background="@color/color_ligh_black"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/imgCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@drawable/theme_23_home_categories" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgCategory"
            android:layout_centerHorizontal="true"
            android:text="Categories"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/centerLine2"
        android:background="@color/color_ligh_black"
        android:layout_toRightOf="@+id/centerLine"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgOffers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:src="@drawable/theme_23_home_offers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgOffers"
            android:layout_centerHorizontal="true"
            android:text="Offers"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_normal" />
    </RelativeLayout>

    <View
        android:id="@+id/centerLine"
        android:layout_width="1dp"
        android:layout_height="170dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/bottomLine"
        android:background="@android:color/transparent"
        android:layout_marginBottom="6dp"/>


    <View
        android:id="@+id/centerLine2"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:background="@android:color/transparent"
        android:layout_above="@id/relHistory"
        android:layout_centerHorizontal="true"/>


    <View
        android:id="@+id/bottomLine"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="#E81E25" />

</RelativeLayout>