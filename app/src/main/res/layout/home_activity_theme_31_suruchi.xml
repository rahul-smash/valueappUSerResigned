<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theme_31_home_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/weight_banner"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="@integer/weight_menu_section"
            android:background="@android:color/transparent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50">

                <RelativeLayout
                    android:id="@+id/relCategory"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:gravity="center">

                    <com.signity.bonbon.view.FontTextView
                        android:id="@+id/imgCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/font_home_cat"
                        android:textColor="@color/color_white"
                        android:textSize="32dp"
                        android:background="@drawable/theme_31_home_icon_background"/>

                    <TextView
                        android:id="@+id/category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgCategory"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="CATEGORIES"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"></View>

                <RelativeLayout
                    android:id="@+id/relOffers"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:gravity="center">


                    <com.signity.bonbon.view.FontTextView
                        android:id="@+id/imgOffers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/font_home_offer"
                        android:textColor="@color/color_white"
                        android:textSize="32dp"
                        android:background="@drawable/theme_31_home_icon_background"/>


                    <TextView
                        android:id="@+id/offers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgOffers"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="OFFERS"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"></View>

                <RelativeLayout
                    android:id="@+id/relMyCart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:gravity="center">

                    <com.signity.bonbon.view.FontTextView
                        android:id="@+id/imgCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/font_home_my_cart"
                        android:textColor="@color/color_white"
                        android:textSize="32dp"
                        android:background="@drawable/theme_31_home_icon_background"/>

                    <TextView
                        android:id="@+id/myCart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgCart"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="MY CART"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_small" />

                    <Button
                        android:id="@+id/buttonCart"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignRight="@+id/imgCart"
                        android:layout_marginRight="-5dp"
                        android:background="@drawable/red_noto"
                        android:clickable="false"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="10sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_white"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50">

                <RelativeLayout
                    android:id="@+id/relBookNow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:gravity="center">

                    <com.signity.bonbon.view.FontTextView
                        android:id="@+id/imgFav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/font_home_book"
                        android:textColor="@color/color_white"
                        android:textSize="32dp"
                        android:background="@drawable/theme_31_home_icon_background"/>

                    <TextView
                        android:id="@+id/bookNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgFav"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="BOOK NOW"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"></View>

                <RelativeLayout
                    android:id="@+id/relMyOrders"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:gravity="center">


                    <com.signity.bonbon.view.FontTextView
                        android:id="@+id/imgOrderHistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/font_home_order"
                        android:textColor="@color/color_white"
                        android:textSize="32dp"
                        android:background="@drawable/theme_31_home_icon_background"/>


                    <TextView
                        android:id="@+id/myOrder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgOrderHistory"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="DELIVERY AREA"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_white"></View>

                <RelativeLayout
                    android:id="@+id/relContact"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:gravity="center">

                    <com.signity.bonbon.view.FontTextView
                        android:id="@+id/imgContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="@string/font_home_contact"
                        android:textColor="@color/color_white"
                        android:textSize="32dp"
                        android:background="@drawable/theme_31_home_icon_background"/>

                    <TextView
                        android:id="@+id/contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgContact"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="3dp"
                        android:text="CONTACT"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
