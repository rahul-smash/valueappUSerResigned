<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="#ffffff">

    <ImageView
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:background="@drawable/offer" />

    <ImageView
        android:id="@+id/items_image"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp" />


    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/items_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/items_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amul Butter"
            android:textColor="#2f2f2f"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/items_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="95.00"
                android:textColor="#ee1b26"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/rupee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/items_price"
                android:text="\u20B9"
                android:textColor="#ee1b26"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/revised_items_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/rupee"
                android:text="100.00"
                android:textColor="#2f2f2f"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/revised_rupee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/revised_items_price"
                android:text="\u20B9"
                android:textColor="#2f2f2f"
                android:textSize="14sp" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sku"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/str_lbl_sku"
                android:textColor="#a2a0a2"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/sku"
                android:spinnerMode="dialog" />
        </RelativeLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/add_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/add" />

    <ImageButton
        android:id="@+id/remove_button"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/add_button"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/remove" />

    <TextView
        android:id="@+id/number_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/add_button"
        android:text="1"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="21dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@id/number_text"
        android:background="@drawable/list_icon" />


</RelativeLayout>
