<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ColorPrimary">

        <Button
            android:id="@+id/backButton"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:contentDescription=""
            android:drawableLeft="@drawable/left"
            android:paddingLeft="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="20sp"
            android:visibility="visible" />

    </RelativeLayout>


    <ListView
        android:id="@+id/items_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_total"
        android:layout_below="@+id/header"
        android:background="#ffffff"></ListView>

    <TextView
        android:id="@+id/emptyCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Empty Cart"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:visibility="gone" />


    <RelativeLayout
        android:id="@+id/layout_total"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_above="@+id/placeorder"
        android:background="@color/ColorPrimary">

        <TextView
            android:id="@+id/total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/shipping_charges_text"
            android:layout_margin="10dp"
            android:text="Total"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/total_layout"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/shipping_layout"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#ffffff"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/total"
                android:text="\u20B9"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </RelativeLayout>

    </RelativeLayout>

    <Button
        android:id="@+id/placeorder"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_weight="1"
        android:background="#29a829"
        android:gravity="center"
        android:text="Place Order"
        android:textColor="#ffffff"
        android:textSize="15sp" />
</RelativeLayout>
