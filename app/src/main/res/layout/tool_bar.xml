<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:background="@color/ColorPrimary"
    android:elevation="2dp">

    <Button
        android:id="@+id/menu"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:background="@android:color/transparent"
        android:clickable="false"
        android:drawableLeft="@drawable/menu"
        android:focusable="false" />


    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:text="@string/str_groceryapp"
        android:textColor="@color/app_text_color"
        android:textStyle="bold"
        android:textSize="@dimen/header_toolbar_text_size" />


    <ImageButton
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@drawable/header_search"
        android:background="@android:color/transparent"
        android:padding="5dp"/>


    <ImageButton
        android:id="@+id/shopingcart"
        android:layout_width="32dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/search"
        android:background="@drawable/add_to_cart"
        android:visibility="gone" />
    <!--<ImageView-->
    <!--android:id="@+id/shopping_cart_bg"-->
    <!--android:layout_width="22dp"-->
    <!--android:layout_height="22dp"-->
    <!--android:background="@drawable/red_noto"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_marginRight="35dp"-->
    <!--android:layout_marginTop="4dp"-->
    <!--/>-->
    <TextView
        android:id="@+id/shoppingcart_text"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/red_noto"
        android:gravity="center"
        android:text="0"
        android:textColor="#ffffff"
        android:textSize="13sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/list"
        android:layout_width="20dp"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/shopingcart"
        android:background="@drawable/top_cat"
        android:visibility="gone" />

    <Button
        android:id="@+id/citySelect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/locations"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/arrow_spinner_down_24"
        android:gravity="center"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:visibility="gone" />

</RelativeLayout>